<h1>Projects</h1>
<form class="search" action="/users/searchProjects" method="GET">
    <label for="searchQuery">Seach: </label>
    <input type="text" name="searchQuery">
    <input type="submit" value="Search">
</form>

<div class="projects">

    {{#each projects}}
    <div class="project">
        <h2>{{name}}</h2>

        {{#if hasTeam}}
        <h3>Team: {{team.name}}</h3>
        {{else}}
        <h3>Team: {{team.name}}</h3>
        {{/if}}

        <p>Description: {{description}}</p>
    </div>
    {{/each}}

</div>